{
  "name": "science-of-revolution-web-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .ts,.tsx src",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:smoke": "playwright test --config=playwright.smoke.config.ts",
    "test:smoke:ci": "playwright test --config=playwright.smoke.config.ts --reporter=json",
    "test:smoke:mobile": "playwright test --config=playwright.smoke.config.ts --project=mobile-chrome-smoke",
    "test:story": "playwright test tests/e2e/story-validation",
    "test:story:ci": "playwright test tests/e2e/story-validation --reporter=json",
    "migration:create": "bash scripts/create-migration.sh",
    "migration:check": "bash scripts/check-migrations.sh",
    "typecheck": "tsc --noEmit",
    "ci": "npm run typecheck && npm run lint && npm run migration:check && npm test -- --run && npm run test:smoke:ci"
  },
  "dependencies": {
    "@supabase/supabase-js": "2.45.1",
    "@tanstack/react-query": "5.50.1",
    "@types/react-beautiful-dnd": "^13.1.8",
    "react": "18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.28.0",
    "zustand": "4.5.2"
  },
  "devDependencies": {
    "@playwright/test": "1.48.2",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "22.7.4",
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "4.3.2",
    "autoprefixer": "10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "43.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "6.6.0",
    "eslint-plugin-react": "7.36.1",
    "eslint-plugin-react-hooks": "5.1.0",
    "jsdom": "25.0.1",
    "postcss": "8.4.47",
    "tailwindcss": "3.4.14",
    "typescript": "5.5.4",
    "vite": "5.4.9",
    "vitest": "2.1.4"
  }
}
